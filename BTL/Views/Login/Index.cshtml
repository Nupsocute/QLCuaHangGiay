@{
    ViewData["Title"] = "Store";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@model BTL.Models.Login
<div class="shopping-cart">

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="location">
                    <ul>
                        <li><a asp-controller="Store" asp-action="Index" title="go to homepage">Home<span>/</span></a>  </li>
                        <li><strong>Login page</strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="login-area">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form asp-controller="Login" asp-action="Login" method="post">
                                <input asp-for="LoginName">
                                <input type="password" asp-for="Password">
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" id="remember">
                                        <label for="remember">Remember me</label>
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <a asp-action="Index"><button type="submit" class="default-btn">Login</button></a>
                                    @if (TempData["ErrorMessage"] != null)
                                    {
                                        <div class="error-message">
                                            @TempData["ErrorMessage"]
                                        </div>
                                        TempData["ErrorMessage"] = null;
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>