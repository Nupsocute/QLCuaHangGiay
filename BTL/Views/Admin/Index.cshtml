@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Product>

    <style>
    
        .pagedList {
            justify-content: center;
            display: flex;
            margin: 10px 0;
        }

            .pagedList a {
                margin: 10px;
            }

        .active {
            margin: 0 10px
        }

    </style>

<div class="ms-2 mx-2">
    <h1>Product</h1>
    <a asp-action="Create">Create</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Đường dẫn ảnh</th>
                <th>Màu sắc</th>
                <th>Mã kích cỡ</th>
                <th>Mã kiểu</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice</td>
                    <td>@product.ProductImagePath</td>
                    <td>@product.Color.ColorName</td>
                    <td>@product.Size.SizeName</td>
                    <td>@product.Type.TypeName</td>
                    <td>
                        <a asp-action="Edit" asp-route-ProductID="@product.ProductID">Edit</a>|
                        <a asp-action="Delete" asp-route-ProductID="@product.ProductID">Delete</a>
                    </td>
                </tr>
            }
            <div class="pagedList">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
            </div>
        </tbody>
    </table>
</div>
